<p id="notice"><%= notice %></p>

<h1>Products</h1>

<div class="container-fluid">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-sm">
        <%= image_tag(product.image_url, class: "img-fluid") %>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
      </div><!-- /col -->
    <% end %>
  </div>
</div>

<br>

<%= link_to 'New Product', new_product_path %>
